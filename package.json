{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "watch": "vite build --watch",
        "optimize:images": "node scripts/optimize-images.js",
        "optimize:css": "npx tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify",
        "optimize:js": "esbuild resources/js/app.js --bundle --minify --sourcemap --outfile=public/js/app.js",
        "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
        "production": "npm run build && npm run optimize",
        "lint": "eslint resources/js/ --ext .js,.vue",
        "lint:fix": "eslint resources/js/ --ext .js,.vue --fix"
    },
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "cssnano": "^7.1.2",
        "esbuild": "^0.25.12",
        "eslint": "^9.39.1",
        "eslint-plugin-vue": "^10.5.1",
        "imagemin": "^7.0.1",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-pngquant": "^10.0.0",
        "imagemin-webp": "^8.0.0",
        "laravel-mix": "^6.0.49",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "postcss-import": "^16.1.1",
        "sharp": "^0.34.4",
        "tailwindcss": "^3.4.18",
        "vite": "^7.0.7"
    }
}
